{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true
    }
}